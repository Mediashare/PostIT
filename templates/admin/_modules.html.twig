<div class="col-12 mt-3">
    <div class="card bg-main shadow-lg rounded">
        <div class="card-header">
            <h4 class="card-title">
                Modules
            </h4>
        </div>
        <div class="card-content" style="max-height: 50vh;overflow: auto;">
            <ul class="list-group text-right bg-main">
                {% for module in modules %}
                    <li class="list-group-item bg-main post_link"> 
                        <span class="float-left">
                            <a href="{{ path('module_form', {'id': module.id}) }}" class="text-warning">Edit</a> -
                            <a href="{{ path('module_delete', {'id': module.id}) }}" class="text-danger">Delete</a>
                        </span>
                        <strong>{{ module.name }}</strong> 
                        <br>
                        <span class="float-right">
                            <em>{{ module.createDate|date('d/m/Y') }}</em>
                        </span>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="card-footer">
            <a href="{{ path('module_form') }}" class="btn btn-outline-success">
                Cr√©er un nouveau module
            </a>
        </div>
    </div>
</div>