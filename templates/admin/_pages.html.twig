<div class="card bg-main shadow-lg rounded mt-3">
    <div class="card-header">
        <h4 class="card-title">
            Pages
        </h4>
    </div>
    <div class="card-content" style="max-height: 50vh;overflow: auto;">
        <ul class="list-group text-right bg-main">
            {% for page in pages %}
                <li class="list-group-item bg-main post_link"> 
                    <span class="float-left">
                        <a href="{{ page.url }}" class="btn btn-primary p-1 shadow-lg">Voir</a>
                        <a href="{{ path('page_form', {'id': page.id}) }}" class="btn btn-warning p-1 shadow-lg">Modifier</a>
                        <a onclick="modalDelete('modal-page-{{ page.id }}', '{{ path('page_delete', {'id': page.id}) }}');" class="btn btn-danger p-1 shadow-lg">Supprimer</a>
                    </span>
                    <a href="{{ page.url }}"><strong>{{ page.url }}</strong></a> 
                    <br>
                    <span class="float-right">
                        <em>{{ page.createDate|date('d/m/Y') }}</em>
                    </span>
                </li>
                <div id="modal-page-{{ page.id }}" class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content bg-main rounded shadow-lg">
                        <div class="modal-header">
                            <h5 class="modal-title">Suppression</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Êtes-vous sûr de vouloir supprimer cet élément ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                            <a class="btn btn-danger delete">Supprimer</a>
                        </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </ul>
    </div>
    <div class="card-footer">
        <a href="{{ path('page_form') }}" class="btn btn-outline-success">
            Créer une nouvelle page
        </a>
    </div>
</div>