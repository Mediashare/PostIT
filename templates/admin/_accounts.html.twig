<div class="card bg-main shadow-lg rounded mt-3 mb-3">
    <div class="card-header">
        <h4 class="card-title">
            Accounts
        </h4>
    </div>
    <div class="card-content" style="max-height: 50vh;overflow: auto;">
        <ul class="list-group text-right bg-main">
            {% for user in users %}
                <li class="list-group-item bg-main post_link" > 
                    <span class="float-left">
                        <a href="{{ path('profile', {'username': user.slug,}) }}" class="btn btn-primary p-1">Show</a>
                        <a href="{{ path('profile_edit', {'username': user.slug,}) }}" class="btn btn-warning p-1">Edit</a>
                        <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger p-1">Delete</a>
                    </span>
                    <a href="{{ path('profile', {'username': user.slug,}) }}">
                        <strong class="username">{{ user.username }}</strong> 
                    </a>
                    <br>
                    <span class="float-right">
                        <em>{{ user.email }}</em>
                    </span>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>