<div class="col-12 mt-3 mb-3">
    <div class="card bg-main shadow-lg rounded">
        <div class="card-header">
            <h4 class="card-title">
                Accounts
            </h4>
        </div>
        <div class="card-content" style="max-height: 50vh;overflow: auto;">
            <ul class="list-group text-right bg-main">
                {% for user in users %}
                    <li class="list-group-item bg-main post_link" > 
                        <span class="float-left">
                            <a href="{{ path('profile', {'username': user.slug,}) }}" class="text-primary">Show</a> -
                            <a href="{{ path('profile_edit', {'username': user.slug,}) }}" class="text-warning">Edit</a> -
                            <a href="{{ path('user_delete', {'id': user.id}) }}" class="text-danger">Delete</a>
                        </span>
                        <a href="{{ path('profile', {'username': user.slug,}) }}">
                            <strong>{{ user.username }}</strong> 
                        </a>
                        <br>
                        <span class="float-right">
                            <em>{{ user.email }}</em>
                        </span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>