<div class="col-12 mt-3">
    <div class="card bg-main shadow-lg rounded">
        <div class="card-header">
            <h4 class="card-title">
                Inputs
            </h4>
        </div>
        <div class="card-content" style="max-height: 50vh;overflow: auto;">
            <ul class="list-group text-right bg-main">
                {% for input in inputs %}
                    <li class="list-group-item bg-main post_link"> 
                        <span class="float-left">
                            <a href="{{ path('input_form', {'id': input.id}) }}" class="text-warning">Edit</a> -
                            <a href="{{ path('input_delete', {'id': input.id}) }}" class="text-danger">Delete</a>
                        </span>
                        <strong>{{ input.type }}</strong> 
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="card-footer">
            <a href="{{ path('input_form') }}" class="btn btn-outline-success">
                Cr√©er un nouvel input
            </a>
        </div>
    </div>
</div>