<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="{{ preload(asset('images/logo.png'), { as: 'image', importance: 'low' }) }}">
        {# SEO #}
        <title>{% block title %}Mediashare{% endblock %}</title>
        <meta name="robots" content="index, follow">
        <link rel="canonical" href="{{ app.request.uri }}"/>
        <meta name="description" content="{% block description %}Mediashare est une entité promouvant le partage de ressource sur Internet.{% endblock %}">
        <meta name="author" content="{% block author %}Mediashare{% endblock %}">
        <meta name="keywords" content="Mediashare, mediashare.fr, partage, blog, automatisation, devops, documentations, hack, astuces, command line, open-sourcing, php, librairies, symfony, tools, outils numérique" lang="fr">
        {# SEO OG:* #}
        <meta property="og:title" content="{% block title_og %}Mediashare{% endblock %}">
        <meta property="og:description" content="{% block description_og %}Mediashare est une entité promouvant le partage de ressource sur Internet.{% endblock %}">
        <meta property="og:type" content="{% block type_og %}article{% endblock %}">
        <meta property="og:author" content="{% block author_og %}Mediashare{% endblock %}">
        
        {# Css #}
        <meta name="viewport" content="width=device-width, initial-scale=0.8">
        <link rel="stylesheet" href="{{ preload(asset('font/recursive.css'), { as: 'font', importance: 'high' }) }}">
        <link rel="stylesheet" href="{{ preload(asset('css/bootstrap.min.css'), { as: 'style', importance: 'high' }) }}">
        <link rel="stylesheet" href="{{ preload(asset('css/retro.css'), { as: 'style', importance: 'high' }) }}">
        <link rel="stylesheet" href="{{ preload(asset('css/menu.css'), { as: 'style' }) }}">
        <link rel="stylesheet" href="{{ preload(asset('css/custom.css'), { as: 'style' }) }}">
        <link rel="stylesheet" href="{{ preload(asset('fontawesome/css/all.css'), { as: 'style', importance: 'high' }) }}">
        <link rel="stylesheet" href="{{ preload(asset('css/highlight.min.css'), { as: 'style' }) }}">
        {% block stylesheets %}{% endblock %}
        
        {# Javascripts #}
        <script src="{{ preload(asset('js/jquery.min.js'), { as: 'script', importance: 'high' }) }}"></script>
        <script src="{{ preload(asset('js/bootstrap.min.js'), { as: 'script' }) }}"></script>
        <script src="{{ preload(asset('js/highlight.min.js'), { as: 'script' }) }}"></script>
        
        {# Google Analytics #}
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-101987237-1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'UA-101987237-1');
        </script>

    </head>
    <body>
        <div class="container-fluid">
            {% if app.request.get('_route') != 'post_new' 
                and app.request.get('_route') != 'post_edit' 
                and app.request.get('_route') != 'page_form' %}
                <div class="row">
                    <div id="content" class="col-lg-9 p-0 shadow-lg rounded">
                        {% include '_flash.html.twig' %}
                        <div class="col-12 rounded mt-3">
                            {% block content %}{% endblock %}
                        </div>
                        <div class="col-12 rounded mt-3 mb-3">
                            {% block comments %}{% endblock %}
                        </div>
                    </div>
                    <div id="menu" class="col-lg-3 p-0">
                        {{ render(controller('App\\Controller\\AppController::menu', {'request': app.request, 'post': post ?? null, 'page': page ?? null})) }}
                    </div>
                </div>
            {% else %}
                {% include '_flash.html.twig' %}
                {% block editor %}{% endblock %}
            {% endif %}
        </div>

        {# Javascripts #}
        <script src="{{ preload(asset('js/app.js'), { as: 'script' }) }}"></script>
        {# Menu #}
        <script>
            {% if currentPost.slug is defined %} scrollToAnchor('{{ currentPost.slug }}'); {% endif %}
        </script>
        {# Google Adsense #}
        <script data-ad-client="ca-pub-5281743992366973" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
