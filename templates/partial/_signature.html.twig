{% if post.author.username is defined %}
    {% set user = post.author %}
{% endif %}

{% if user is defined %}
<div id="post_signature" class="p-0 pt-2 rounded text-center">
    <a href="{{ path('profile', {'username': user.slug}) }}" title="Profile {{ user.username }}" class="username">
        <img src="{{ asset('images/avatars/' ~ user.avatar ?? 'default.png') }}" class="img-fluid avatar shadow-lg"> <br>
        <em class="username">{{ user.username }}</em>
    </a>
    <p class="m-0 pb-2 signature">{{ user.signature }}</p>
</div>
{% endif %}