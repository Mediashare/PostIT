{% extends 'view/page.html.twig' %}

{% block title %}Templates{% endblock %}

{% block content %}
    <div id="templates" class="col-12 mt-3">
        <a href="{{ path('template_form') }}" class="btn btn-success p-1">
            Créer un nouveau template
        </a>
        {% for template in templates|reverse %}
            <div class="card shadow-lg mt-3"> 
                <a href="{{ path('template_form', {'id': template.id}) }}" class="post_link">    
                    <div class="card-body">
                        <strong>{{ template.name }}</strong> 
                        <br>
                        <em class="text-white">{{ template.createDate|date('d/m/Y') }}</em>
                    </div>
                </a>
                <div class="card-footer markdown-body">
                    {{ template.markdown|raw }}
                </div>
                <div class="card-footer text-right shadow-lg">
                    <a href="{{ path('template_form', {'id': template.id}) }}" class="btn btn-warning">Modifier</a>
                    <a onclick="modalDelete('modal-template-{{ template.id }}', '{{ path('template_delete', {'id': template.id}) }}')" class="btn btn-danger p-1 shadow-lg">
                        Supprimer
                    </a>
                    <div id="modal-template-{{ template.id }}" class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content bg-main rounded shadow-lg">
                            <div class="modal-header">
                                <h5 class="modal-title">Suppression</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Êtes-vous sûr de vouloir supprimer cet élément ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                <a class="btn btn-danger delete">Supprimer</a>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
