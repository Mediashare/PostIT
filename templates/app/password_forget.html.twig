{% extends 'view/page.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}
    <form class="col-12 mt-3" method="POST">
        <div class="card bg-main shadow">
            <div class="card-header">
                <h2 class="card-title">
                    Mot de passe oublié
                </h2>
            </div>
            <div class="card-body">
                <p>
                    Veuillez entrer votre adresse e-mail afin que nous puissions vous envoyer par e-mail une url de récupération pour votre mot de passe oublié.
                </p>
                <input type="email" name="email" id="input_email" class="form-control border" placeholder="Email *" required="true">
            </div>
            <div class="card-footer">
                <button class="btn btn-lg btn-primary" type="submit">
                    Envoyer
                </button>
            </div>
        </div>
    </form>
{% endblock %}
