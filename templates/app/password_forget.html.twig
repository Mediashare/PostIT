{% extends 'view/page.html.twig' %}

{% block title %}Password forget{% endblock %}

{% block content %}
    <form class="col-12 mt-3" method="POST">
        <div class="card bg-main shadow">
            <div class="card-header">
                <h2 class="card-title">
                    Password forget
                </h2>
            </div>
            <div class="card-body">
                <p>
                    Please enter your email address so that we can send you a recovery url for your forgotten password by email.
                </p>
                <input type="email" name="email" id="input_email" class="form-control border" placeholder="Email" required="true">
            </div>
            <div class="card-footer">
                <button class="btn btn-lg btn-primary" type="submit">
                    Send
                </button>
            </div>
        </div>
    </form>
{% endblock %}
