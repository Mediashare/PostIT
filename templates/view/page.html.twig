{% extends 'base.html.twig' %}

{% block container %}
    <div class="row">
        <div id="content" class="col-lg-9 shadow-lg rounded p-0">
            {% include 'partial/_flash.html.twig' %}
            {% block content %}{% endblock %}
            {% block messages %}{% endblock %}
        </div>
        <div id="menu" class="col-lg-3 p-0">
            {% block menu %}
                {{ render(controller('App\\Controller\\PartialController::menu', {'request': app.request, 'post': post ?? null, 'page': page ?? null, 'user': user ?? null})) }}
            {% endblock %}
        </div>
    </div>
{% endblock %}